{
  "root": true,
  "env": { "node": true, "browser": true },
  "settings": { "react": { "version": "detect" } },
  "parserOptions": {
    "ecmaFeatures": { "jsx": true },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "extends": ["plugin:react/recommended", "plugin:react/jsx-runtime"],
  "rules": {
    "react/react-in-jsx-scope": "off",
    "semi": [2, "always"]
  }
}
